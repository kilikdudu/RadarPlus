<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radar.Pages.PercursoPage"
             Title="Meus Percursos">
  <StackLayout Orientation="Vertical">
    <ListView x:Name="percursoListView" ItemTapped="abrirPercurso">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.ContextActions>
              <MenuItem Clicked="excluirPercurso" CommandParameter="{Binding .}" Text="Excluir" IsDestructive="True" />
            </ViewCell.ContextActions>
            <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal">
              <StackLayout Padding="5,0,0,0" VerticalOptions="StartAndExpand" Orientation="Vertical">
                <Label Text="{Binding Nome}" VerticalTextAlignment="Center" FontSize="Medium" />
                <Label Text="hint: trigger a context action" VerticalTextAlignment="Center" FontSize="Small" />
              </StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button Text="Gravar Percurso!" Clicked="gravarPercurso" />
  </StackLayout>
</ContentPage>
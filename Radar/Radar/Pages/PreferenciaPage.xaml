<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Radar.PreferenciaPage">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style  x:Key="bar" TargetType="NavigationPage">
				<Setter Property="BarBackGroundColor" Value="#00796b" />
				<Setter Property="BarTextColor" Value="#212121" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	
	<ContentPage.Content Style="{StaticResource bar}"  >
		<StackLayout Orientation="Vertical" Padding="5, 5, 5, 5" BackgroundColor="White">
      
    
		<ListView  x:Name="lstView" RowHeight="60" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
								<Label Text = "{Binding .}" FontSize="24" AbsoluteLayout.LayoutBounds="0.25, 0.25, 400, 40"/>
						

					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	
    </StackLayout>
	</ContentPage.Content>
</ContentPage>

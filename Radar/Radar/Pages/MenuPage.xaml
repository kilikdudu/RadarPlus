<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radar.Pages.MenuPage"
		     BackgroundColor="#b2dfdb">
  <ContentPage.Content>
    <StackLayout Orientation="Vertical" Padding="5, 10, 5, 10">
      <ListView x:Name="listView" GroupDisplayBinding="{Binding Nome}" SeparatorVisibility="None" IsGroupingEnabled="true" BackgroundColor="#b2dfdb">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Horizontal" BackgroundColor="#b2dfdb">                
				<Image Source="{Binding Icone}" HorizontalOptions="Start"  VerticalOptions="Center" WidthRequest="30" HeightRequest="30"/>
				<Label Text="{Binding Titulo}" HorizontalOptions="Center" VerticalOptions="Center" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.GroupHeaderTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Vertical" BackgroundColor="#b2dfdb">
                <Label Text="{Binding Nome}" />
                <BoxView HeightRequest="1" BackgroundColor="#bdbdbd" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.GroupHeaderTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
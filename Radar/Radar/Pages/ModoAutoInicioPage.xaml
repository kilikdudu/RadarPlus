<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Radar.ModoAutoInicioPage">
  <ContentPage.Content>
		<ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
     		<StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" >
				
		      <StackLayout Orientation="Horizontal" >   
		        <Label Text="Habilitar" HorizontalOptions="StartAndExpand" FontSize="20" Margin="20,20,0,0"/>
		        <Switch HorizontalOptions="EndAndExpand" Margin="20,0,30,0" x:Name="habilitar" Toggled="habilitarToggled"/>
			  </StackLayout>
			      <Label FontSize="14" Margin ="20,0,0,0" Text="Inicia ou desliga automaticamente quanto qualquer" HorizontalOptions="StartAndExpand" />
			      <Label FontSize="14" Margin ="20,0,0,0" Text="outro App que consome GPS for iniciado ou desligado" HorizontalOptions="StartAndExpand" />

			      <BoxView Color="Gray" HeightRequest="1" />
		     
		    </StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
